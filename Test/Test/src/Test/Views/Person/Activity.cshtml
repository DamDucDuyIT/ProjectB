@model Person
@{
    ViewData["Title"] = "Hoạt động";
}

<div class="row col-lg-offset-8">
    <ul class="nav navbar-nav">

        <li><a asp-controller="Person" asp-action="YourProfile">YourProfile</a></li>
        <li><a asp-controller="Person" asp-action="Activity">Activity</a></li>
    </ul>

</div>
<hr />

<div class="container" style="margin-top:4em">
    <div class="row">
        <div class="col-md-6">
            <div class="panel panel-primary">
                <div class="panel-heading">
                    <h3 class="panel-title">Câu hỏi</h3>

                </div>
                <div class="panel-body" style="background-color:white;height:15em">
                   <table class="table">
                       <tbody>
                          @{
                              int a = 3;
                              foreach (var item in Model.Questions)
                              {
                                <tr>
                                    <td>
                                        <a asp-controller="Question" asp-action="Details" asp-route-id="@item.QuestionID">@item.QuestionTitle</a>
                                    </td>
                                    <td>
                                        <button class="btn btn-success">@item.AnswerCount</button>
                                    </td>
                                </tr>
                                  a--;
                                  if (a == 0)
                                  {
                                      break;

                                  }

                              }
                         } 
                       </tbody>
                    </table>
                </div>
                <div class="panel-footer panel-primary">
                    <a asp-controller="Person" asp-action="QuestionTab" asp-route-personID="@Model.PersonID">Hiển thị thêm</a>
                </div>
            </div>
        </div>

        <div class="col-md-6">
            <div class="panel panel-success">
                <div class="panel-heading">
                    <h3 class="panel-title">Tag</h3>

                </div>
                <div class="panel-body" style="background-color:white;height:15em">
                    <table class="table">
                        <tr>
                            @{
                                int cnt = 0;
                                foreach (var item in Model.Support2s)
                                {
                                    if ((cnt+1) % 8 == 0)
                                    {
                                        break;

                                    }
                                    if (cnt++ % 4 == 0)
                                    {
                                        @:</tr><tr>
                                    }
                                    
                                <td style="width: 520px;
                       border-bottom: 1px dotted #E4E6E7;
                       padding-bottom: 12px;
                padding-right: 6px;
                padding-top: 6px;
                vertical-align: top;">
                                    <a class="post-tag" asp-controller="Tag" asp-action="Tagged" asp-route-tagName="@item.Tag.TagName"><h2>@item.Tag.TagName</h2></a>


                                </td>
                            }
                            @:</tr>


                        }
                    </table>
                </div>
                <div class="panel-footer panel-primary">
                    <a asp-controller="Person" asp-action="TagTab" asp-route-personID="@Model.PersonID">Hiển thị thêm</a>
                </div>
            </div>
        </div>
    </div>
</div>

