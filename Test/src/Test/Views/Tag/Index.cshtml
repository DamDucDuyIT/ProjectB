@model IEnumerable<Test.Models.Tag>

<div class="container">
<table>
    <tr>
        @{
            int cnt = 0;
            foreach (var item in Model)
            {
                if (cnt++ % 3 == 0)
                {
                    @:</tr><tr>
                }
                <td style="width: 520px;
                       border-bottom: 1px dotted #E4E6E7;
                       padding-bottom: 12px;
                padding-right: 6px;
                padding-top: 6px;
                vertical-align: top;">
                    <a class ="post-tag" asp-controller="Tag" asp-action="Tagged" asp-route-tagName="@item.TagName"><h2>@item.TagName</h2></a>


                </td>
            }
      @:</tr>


        }
    
</table>
</div>
            
           

