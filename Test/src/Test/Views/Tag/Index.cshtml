@model ListViewModel
@{
    ViewData["Title"] = "Tag";
}

<form asp-controller="Tag" asp-action="Index" method="get">
    <div class="form-actions no-color">
        <p>
            Tìm kiếm: <input type="text" name="searchText" value="@ViewData["searchText"]" />
            <input type="submit" value="Tìm" class="btn btn-default" /> |
            <a asp-action="Index" asp-route-page="1">Quay lại danh sách</a>
        </p>
    </div>
</form>

<div class="container">
<table>
    <tr>
        @{
            int cnt = 0;
            foreach (var item in Model.Tags)
            {
                if (cnt++ % 3 == 0)
                {
                    @:</tr><tr>
                }
                <td style="width: 520px;
                       border-bottom: 1px dotted #E4E6E7;
                       padding-bottom: 12px;
                padding-right: 6px;
                padding-top: 6px;
                vertical-align: top;">
                    <a class ="post-tag" asp-controller="Tag" asp-action="Tagged" asp-route-tagName="@item.TagName"><h2>@item.TagName</h2></a>


                </td>
            }
      @:</tr>


        }
    
</table>
    <div page-model="@Model.PagingInfo" page-action="Index" page-classes-enabled="true"
         page-class="btn" page-class-normal="btn-default"
         page-class-selected="btn-primary"
         class="btn-group pull-right">
    </div>
</div>
            
           

